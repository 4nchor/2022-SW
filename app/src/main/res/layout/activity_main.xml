<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".startApp_1.userauth.MainActivity">

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_bottom"
        android:layout_alignParentStart="true">


        <TextView
            android:id="@+id/tv_title"
            android:fontFamily="@font/bmjua_ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="#MyCloset"
            android:textAlignment="center"
            android:textColor="@color/mainColor"
            android:textSize="24sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/weatherLayout"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_below="@id/title_layout"
        android:layout_marginTop="-2dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_rcmd_outfit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />

        <Button
            android:id="@+id/favorites_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:text="즐겨찾기" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frag_fl"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@id/weatherLayout">

    </FrameLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shadow_top">

        <ImageButton
            android:id="@+id/logout_btn"
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:background="#FFFFFF"
            android:src="@drawable/ic_baseline_logout_24"
            android:layout_marginTop="5dp"/>

        <ImageButton
            android:id="@+id/ootd_btn"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:background="#FFFFFF"
            android:src="@drawable/ic_baseline_calendar_month_24"
            android:layout_marginTop="5dp"/>

        <ImageButton
            android:id="@+id/addClothes_btn"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baseline_add_24"
            android:background="#FFFFFF"
            android:layout_marginTop="5dp"/>


        <ImageButton
            android:id="@+id/searchOutfit_btn"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baseline_search_24"
            android:background="#FFFFFF"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/addCody_btn"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="코디추가"
            android:backgroundTint="#c3f1ff"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/readCody_btn"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="코디열람"
            android:backgroundTint="#c3f1ff"
            android:layout_margin="8dp" />

    </LinearLayout>


</RelativeLayout>