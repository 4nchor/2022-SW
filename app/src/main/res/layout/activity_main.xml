<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".startApp_1.userauth.MainActivity">

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="470dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="#MyCloset"
            android:textAlignment="center"
            android:textColor="#FF8BB2"
            android:textSize="24sp"
            android:textStyle="bold|italic" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/frag_fl"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@id/title_layout">

    </FrameLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frag_fl"
        android:layout_marginTop="-2dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_rcmd_outfit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_below="@id/linearLayout2"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/logout_btn"
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_logout" />

        <ImageButton
            android:id="@+id/ootd_btn"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_ootd" />

        <ImageButton
            android:id="@+id/addClothes_btn"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_plus" />


        <ImageButton
            android:id="@+id/searchOutfit_btn"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_search" />

        <Button
            android:id="@+id/addCody_btn"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="코디추가" />

        <Button
            android:id="@+id/readCody_btn"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="코디열람" />

    </LinearLayout>




</RelativeLayout>