<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".startApp_1.clothes.addClothesFrag">


    <ImageView
        android:layout_gravity="center"
        android:id="@+id/addclothes_iv"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/ic_baseline_add_photo_alternate_24" />

    <Button
        android:id="@+id/addClothesImg_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이미지 추가" />

    <TextView
        android:id="@+id/showAddedTag_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/addTag_et"
        android:layout_width="match_parent"
        android:hint="태그 입력"
        android:layout_height="50dp"></EditText>

    <EditText
        android:id="@+id/addInfo_et"
        android:layout_width="match_parent"
        android:layout_height="231dp"
        android:hint="추가 정보 입력"></EditText>

    <Button
        android:id="@+id/doneAddClothes_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="의류 등록" />



</LinearLayout>