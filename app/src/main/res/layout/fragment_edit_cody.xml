<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="startApp_1.cody.editCodyFrag">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editCodyname_et"
            android:layout_width="match_parent"
            android:hint="코디 세트 이름 입력"
            android:layout_height="50dp"></EditText>

        <Button
            android:id="@+id/editHashTag_btn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="태그 수정하기" />

        <Button
            android:id="@+id/doneeditCody_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="수정 완료"
            tools:layout_editor_absoluteY="" />

        <TextView
            android:id="@+id/editCody_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="이미 포함되어 있는 의류를 선택하면 취소,\n 포함되지 않은 의류를 선택하면 추가됩니다." />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/editCodycomp_rv"
            android:scrollbars="vertical"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
